<h2>Lista de postagens</h2>
<hr>
<a href="postagens/add"> <button class="btn btn-success mt-4">Nova postagen</button> </a>

{{#each postagens}}
    <div class="card mt-3">
        <div class="card-body">
           <h4> {{titulo}} </h4>
           <p> Descrição: {{descricao}} </p>
           <small>Data: {{data}} </small> <br>
           <small>Categoria: {{categoria.nome}} </small>     
        </div>
    </div>
{{else}}
    <p class="mt-2">Nenhuma postagem registrada</p>
{{/each}}