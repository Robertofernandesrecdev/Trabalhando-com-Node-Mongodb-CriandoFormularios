<h2>Lista de postagens</h2>
<hr>
<a href="/adm/postagens/add"> <button class="btn btn-success mt-4">Nova postagen</button> </a>

{{#each postagens}}
    <div class="card mt-3">
        <div class="card-body">
           <h4> {{titulo}} </h4>
           <p> Descrição: {{descricao}} </p>
           <small>Data: {{data}} </small> <br>
           <small>Categoria: {{categoria.nome}} </small> <br>
           <a href="/adm/postagens/edit/{{_id}}" ><button class="btn btn-success mt-3">Editar postagens</button></a>    
           {{!-- <a href="/postagens/deletar{{_id}}" ><button class="btn btn-danger mt-3">Deletar postagens</button></a>--}}  
           <form action="/adm/postagens/deletar"  method="POST">
                <input type="hidden" name="id" value="{{_id}}" >
                <button type="submit"  class="btn btn-danger mt-2">Deletar postagens</button>
           </form>

        </div>
    </div>
{{else}}
    <p class="mt-2">Nenhuma postagem registrada</p>
{{/each}}